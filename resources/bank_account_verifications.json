{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
        "id": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "bank_account": {
            "$ref": "bank_accounts.json",
            "required": true
        },
        "attempts": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3,
            "required": true
        },
        "attempts_remaining": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3,
            "required": true
        },
        "status": {
            "type": "string",
            "enum": ["pending", "succeeded"],
            "required": true
        },
        "amount1": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99,
            "required": true
        },
        "amount2": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99,
            "required": true
        }
    },
    "additionalProperties": false
}