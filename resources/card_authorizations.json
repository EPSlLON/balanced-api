{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
        "id": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "card": {
            "$ref": "cards.json",
            "required": true
        },
        "debit": {
            "anyOf": [
                { "$ref": "debits.json" },
                { "type": "null" }
            ],
            "required": true
        },
        "amount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10000000,
            "required": true
        },
        "currency": {
            "type": "string",
            "enum": ["USD"],
            "required": true
        },
        "appears_on_statement_as": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": ["string", "null"],
            "required": true
        },
        "status": {
            "type": "string",
            "enum": ["succeeded", "failed"],
            "required": true
        },
        "failure_reason_code": {
            "type": ["string", "null"],
            "required": true
        },
        "failure_reason": {
            "type": ["string", "null"],
            "required": true
        },
        "debit_uri": {
            "type": "string",
            "format": "uri",
            "required": true
        }
    },
    "additionalProperties": false
}