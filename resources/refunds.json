{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
        "id": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "debit": {
            "$ref": "debits.json",
            "required": true
        },
        "order": {
            "anyOf": [
                { "type": "null" },
                { "$ref": "orders.json" }
            ],
            "required": true
        },
        "amount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10000000,
            "required": true
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10000000,
            "required": true
        },
        "currency": {
            "type": "string",
            "enum": ["USD"],
            "required": true
        },
        "description": {
            "type": ["string", "null"],
            "required": true
        },
        "status": {
            "type": "string",
            "enum": ["pending", "succeeded"],
            "required": true
        },
    },
    "additionalProperties": false
}