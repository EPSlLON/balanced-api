{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id": "https://github.com/matin/balanced-api/blob/revision1/resources/orders.json",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "OR[a-zA-Z0-9]{22}"
        },
        "href": {
            "type": "string",
            "format": "uri"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "currency": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
        },
        "amount": {
            "type": "integer",
            "minimum": 0
        },
        "escrowed": {
            "type": "integer",
            "minimum": 0
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0
        },
        "description": {
            "type": "string",
            "default": null
        },
        "delivery_address": {
            "$ref": "<url to address definition"
        },
        "meta": {
            "type": "object"
        },
        "links": []
    }
}