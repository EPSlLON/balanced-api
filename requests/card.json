{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/cards",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "number": {
            "type": "string",
            "pattern": "([0-9][ \\-]*){15,16}",
            "required": true
        },
        "month": {
            "$ref": "_models/month.json",
            "required": true
        },
        "year": {
            "$ref": "_models/year.json",
            "required": true
        },
        "cvv": {
            "type": "string",
            "pattern": "[0-9]{3,4}"
        },
        "address": {
            "$ref": "_models/address.json"
        },
        "meta": {
            "type": "object"
        }
    }
}