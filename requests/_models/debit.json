{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "amount": {
            "type": "integer",
            "minimum": 1,
            "required": true
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "currency": {
            "type": "string",
            "enum": ["USD"],
            "default": "USD"
        },
        "order_href": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "null"
                }
            ]
        },
        "appears_on_statement_as": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "(BAL\\*)?[a-zA-Z0-9\\.<>\\(\\)\\{\\}\\[\\]\\+&!\\$*;\\-%_\\?:\\#@~='\" ^\\`]{1-18}",
                    "description": "All printable ascii characters except for /,\t\n\r\f"
                },
                {
                    "type": "null"
                }
            ]
        },
        "description": {
            "type": ["string", "null"]
        },
        "meta": { "type": "object" }
    }
}