{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "line1": {
            "type": [
                "string",
                "null"
            ]
        },
        "line2": {
            "type": [
                "string",
                "null"
            ]
        },
        "locality": {
            "type": [
                "string",
                "null"
            ]
        },
        "region": {
            "type": [
                "string",
                "null"
            ]
        },
        "postal_code": {
            "type": [
                "string",
                "null"
            ]
        },
        "country_code": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "[A-Z]{2}"
                },
                {
                    "type": "null"
                }
            ],
            "default": "US"
        }
    },
    "dependencies": {
        "line2": "line1",
        "locality": "region",
        "postal_code": "country_code"
    }
}