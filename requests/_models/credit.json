{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "amount": {
            "type": "integer",
            "minimum": 1,
            "required": true
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0,
        },
        "currency": {
            "type": "string",
            "enum": ["USD"],
        },
        "order_href": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "null"
                }
            ]
        },
        "appears_on_statement_as": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "[a-zA-Z0-9 \\.\\-\\*]{1,18}"
                },
                {
                    "type": "null"
                }
            ]
        },
        "description": { "type": "string" },
        "meta": { "type": "object" }
    }
}