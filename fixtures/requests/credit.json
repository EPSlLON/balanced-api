{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/credits",
    "allOf": [
        {
            "$ref": "_models/credit.json"
        },
        {
            "type": "object",
            "properties": {
                "destination": {
                    "anyOf": [
                        {
                            "$ref": "bank_account.json"
                        },
                        {
                            "type": "string",
                            "format": "uri",
                            "pattern": "/bank_accounts/BA[a-zA-Z0-9]{16,32}"
                        },
                        {
                            "type": "string",
                            "pattern": "BA[a-zA-Z0-9]{16,32}"
                        }
                    ]
                }
            }
        }
    ]
}