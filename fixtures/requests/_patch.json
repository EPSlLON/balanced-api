{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Patch_requests",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "op": {
                "type": "string",
                "enum": [
                    "add",
                    "remove",
                    "replace",
                    "move",
                    "copy",
                    "test"
                ]
            },
            "path": {
                "type": "string",
                "pattern": "/\\w+s/0/.+"
            },
            "from": {
                "type": "string",
                "pattern": "/\\w+s/0/.+"
            },
            "value": {}
        },
        "additionalProperties": false,
        "required": [
            "op",
            "path"
        ]
    },
    "uniqueItems": true,
    "minItems": 1
}