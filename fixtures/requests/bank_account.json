{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/bank_accounts",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "account_number": {
            "type": "string",
            "pattern": "[0-9]+"
        },
        "routing_number": {
            "type": "string",
            "pattern": "[0-9]{9}"
        },
        "account_type": {
            "type": "string",
            "enum": [
                "checking",
                "savings"
            ]
        },
        "country_code": {
            "type": "string",
            "pattern": "[A-Z]{2}",
            "default": "US"
        },
        "meta": {
            "type": "object"
        }
    },
    "required": [
        "name",
        "account_number",
        "routing_number",
        "account_type"
    ]
}