{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "links": {
            "type": "object",
            "properties": {
                "orders.debits": {
                    "type": "string",
                    "format": "uri",
                    "required": true
                },
                "orders.refunds": {
                    "type": "string",
                    "format": "uri",
                    "required": true
                },
                "orders.credits": {
                    "type": "string",
                    "format": "uri",
                    "required": true
                },
                "orders.reversals": {
                    "type": "string",
                    "format": "uri",
                    "required": true
                },
                "orders.buyers": {
                    "type": "string",
                    "format": "uri",
                    "required": true
                }
            },
            "required": false
        },
        "meta": {
            "type": "object",
            "required": false
        },
        "orders": {
            "items": { "$ref": "models/orders.json" },
            "type": "array",
            "minItems": 1,
            "uniqueItems": true
        }
    }
}
