{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "line1": {
            "type": ["string", "null"],
            "required": true
        },
        "line2": {
            "type": ["string", "null"],
            "required": true
        },
        "locality": {
            "type": ["string", "null"],
            "required": true
        },
        "region": {
            "type": ["string", "null"],
            "required": true
        },
        "postal_code": {
            "type": ["string", "null"],
            "required": true
        },
        "country_code": {
            "anyOf": [
                { "type": "string", "pattern": "[A-Z]{2}" },
                { "type": "null" }
            ],
            "required": true
        }
    }
}
